/* miniprogram/pages/user/user.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #ebebeb;
}

.name text {
  font-size: 25rpx;
}

.container {
  width: 100%;
  height: 100%;
  padding-top: 30rpx;
  box-sizing: border-box;
}

.container .header {
  /* padding-top: 30rpx; */
  width: 100%;
  height: 170rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.header .hd-img {
  width: 100rpx;
  height: 100rpx;
}

/* .header .hd-img image {
  width: 100%;
  height: 100%;
} */

.header .hd-detail {
  flex: 1;
  padding: 0 20rpx 20rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.hd-img image {
  width: 70rpx;
  height: 70rpx;
  padding-top: 15rpx;
}

.header .hd-detail .name {
  font-size: 34rpx;
}

.header .hd-detail .account {
  font-size: 26rpx;
  width: 200rpx;
  line-height: 50rpx;
  background-color: #ebebeb;
  text-align: center;
  border-radius: 10rpx;
}

/* .header .hd-code {
  width: 80rpx;
  height: 50rpx;
} */

.header .hd-code image {
  width: 50rpx;
  height: 50rpx;
}

/* 内容部分 */

.bd-goods, .bd-setUp {
  width: 750rpx;
  margin-top: 20rpx;
  background-color: white;
}

.bd-userData {
  margin-top: 20rpx;
  background-color: white;
}

.box image, .bd-setUp image, .bd-goods image {
  padding-left: 15rpx;
}

.box-text, .set-text {
  padding-top: 20rpx;
  padding-left: 10rpx;
}

.goods-text {
  padding-left: 10rpx;
}

.bd-goods {
  height: 82rpx;
  display: flex;
  line-height: 82rpx;
}

.bd-goods image {
  height: 70rpx;
  width: 70rpx;
}

.bd-userData image {
  height: 70rpx;
  width: 70rpx;
}

.bd-setUp image {
  height: 70rpx;
  width: 70rpx;
}

.bd-userData__border {
  /* position: relative;  */
}

.bd-userData__border::after {
  content: '';
  position: absolute;
  left: 5%;
  width: 90%;
  height: 1px;
  border-bottom: 1px solid #ebebeb;
}

.box {
  display: flex;
  margin-bottom: 10rpx;
}

.blank {
  height: 500rpx;
  background-color: #ebebeb;
}

.bd-setUp {
  display: flex;
}
